{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@pfeedback-ws/product-feedback-shell/pfeedback-feature-header": [
        "libs/product-feedback-shell/pfeedback-feature-header/src/index.ts"
      ],
      "@pfeedback/board-data-spec": [
        "libs/pfeedback-data-spec/board-spec/src/index.ts"
      ],
      "@pfeedback/board-feedbacks/shell": [
        "libs/pfeedback-board-feedbacks/feature-shell/src/index.ts"
      ],
      "@pfeedback/shell": [
        "libs/product-feedback-shell/pfeedback-feature-shell/src/index.ts"
      ],
      "@pfeedback/shell/header": [
        "libs/product-feedback-shell/pfeedback-feature-header/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
